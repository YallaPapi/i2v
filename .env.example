# i2v Environment Configuration
# Copy this file to .env and fill in your values

# ========================================
# REQUIRED: fal.ai API Key
# ========================================
FAL_API_KEY=your_fal_api_key_here

# ========================================
# DATABASE
# ========================================
DB_PATH=wan_jobs.db                        # SQLite path (default)
# DATABASE_URL=postgresql+asyncpg://user:pass@host/db  # PostgreSQL (production)

# ========================================
# WORKER
# ========================================
WORKER_POLL_INTERVAL_SECONDS=10
AUTO_DOWNLOAD_DIR=downloads
UPLOAD_CACHE_ENABLED=true

# ========================================
# DEFAULTS
# ========================================
DEFAULT_RESOLUTION=1080p
DEFAULT_DURATION_SEC=5

# ========================================
# CLOUDFLARE R2 (Optional - for CDN caching)
# ========================================
# R2_ACCOUNT_ID=your_account_id
# R2_BUCKET_NAME=i2v
# R2_ACCESS_KEY_ID=your_access_key
# R2_SECRET_ACCESS_KEY=your_secret_key
# R2_ENDPOINT=https://xxx.r2.cloudflarestorage.com
# R2_PUBLIC_DOMAIN=pub-xxx.r2.dev

# ========================================
# PROMPT ENHANCEMENT (Optional)
# ========================================
# ANTHROPIC_API_KEY=sk-ant-xxx             # For Claude prompt enhancement

# ========================================
# AUTH & SECURITY (Production)
# ========================================
# JWT_SECRET_KEY=your_secret_key           # Auto-generated if not set
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=10080        # 7 days
# REFRESH_TOKEN_EXPIRE_MINUTES=43200       # 30 days

# ========================================
# CORS
# ========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ========================================
# VAST.AI GPU (Self-hosted SwarmUI - Wan 2.2 I2V)
# ========================================
# VASTAI_API_KEY=your_vastai_api_key              # vast.ai API key
# VASTAI_INSTANCE_ID=29996148                     # Instance ID (from vast.ai dashboard)
# CLOUDFLARE_TUNNEL_TOKEN=eyJ...                  # Zero Trust tunnel token (from dashboard)
# SWARMUI_URL=https://xxx.trycloudflare.com       # Cloudflare quick tunnel URL
# SWARMUI_AUTH_TOKEN=xxx                          # Portal auth token (from tunnel URL ?token=xxx)

# SwarmUI Wan 2.2 I2V Model Configuration
# SWARMUI_MODEL=wan2.2_i2v_high_noise_14B_fp8_scaled
# SWARMUI_SWAP_MODEL=wan2.2_i2v_low_noise_14B_fp8_scaled
# SWARMUI_LORA_HIGH=wan2.2-lightning_i2v-a14b-4steps-lora_high_fp16
# SWARMUI_LORA_LOW=wan2.2-lightning_i2v-a14b-4steps-lora_low_fp16
# SWARMUI_DEFAULT_STEPS=10
# SWARMUI_DEFAULT_CFG=7.0
# SWARMUI_DEFAULT_FRAMES=80
# SWARMUI_DEFAULT_FPS=16
# SWARMUI_VIDEO_STEPS=5
# SWARMUI_VIDEO_CFG=1.0
# SWARMUI_SWAP_PERCENT=0.6

# ========================================
# PINOKIO WAN GP (Optional - Self-hosted GPU via Vast.ai)
# ========================================
# PINOKIO_WAN_URL=https://xxx.trycloudflare.com  # Cloudflare tunnel URL
# PINOKIO_SSH_HOST=ssh9.vast.ai                   # SSH host
# PINOKIO_SSH_PORT=28690                          # SSH port
# PINOKIO_SSH_USER=root                           # SSH user
# PINOKIO_MAX_CONCURRENT=1                        # Max concurrent jobs (WAN GP is sequential)
# PINOKIO_ENABLED=false                           # Enable Pinokio backend

# ========================================
# TASK MASTER AI (Optional - for development)
# ========================================
# PERPLEXITY_API_KEY=pplx-xxx
